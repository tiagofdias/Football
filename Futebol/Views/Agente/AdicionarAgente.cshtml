@model Futebol.Agente

@{
    ViewBag.Title = "Adicionar Agente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="teste">Adicionar Agente Desportivo</h2>

<style>


    a {
        color: black;
        text-decoration: none;
    }

        a:hover {
            color: black;
            text-decoration: none;
        }


    #teste {
        color: black;
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    }

        #teste a:hover {
            color: #f4511e;
            text-decoration: none;
        }

    hr {
        display: block;
        height: 1px;
        border: 0;
        border-top: 1px solid #000000;
        margin: 1em 0;
        padding: 0;
    }

    label {
        color: black;
        padding: 12px 12px 12px 0;
        display: inline-block;
        text-align: left
    }

    input[type=submit] {
        background-color: #000000;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        float: right;
    }

        input[type=submit]:hover {
            background-color: #f4511e;
               color: white;
        }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-control-static" id="teste">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="navbar-form">
        <b class="control-label col-md-2">Nome *</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <br /><br />

    <div class="navbar-form">
        <b class="control-label col-md-2">Morada</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Morada, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Morada, "", new { @class = "text-danger" })
        </div>
    </div>

    <br /><br />

    <div class="navbar-form">
        <b class="control-label col-md-2">Código Postal</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CodigoPostal, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CodigoPostal, "", new { @class = "text-danger" })
        </div>
    </div>

    <br /><br />

    <div class="navbar-form">
        <b class="control-label col-md-2">Telefone *</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", required = "required", maxlength = "9" } })
            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
        </div>
    </div>

    <br /><br />

    <div class="navbar-form">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div id="teste">
    @Html.ActionLink("Voltar para a Lista", "ListaAgente")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
